<body>

  <h1>Revolution Vending</h1>

  <div class="form-data">
    <form name="my-form" method="post" onsubmit="return formSubmit();" action="">
      <!--Customer info-->

      <label for="name">Name</label>
      <input name="name" type="text" id="name" placeholder="First Last" ><br/>

      <label for="address">Address</label>
      <input name="address" type="text" id="address" placeholder="eg. 123 Main Street"><br/>

      <label for="city">City</label>
      <input name="city" type="text" id="city" placeholder='eg. "Toronto" or "New Dundee"'><br/>

      <label>Province</label>
      <select name="province" id="province">
          <option value="">----- Select -----</option>
          <option value="bc">British Columbia</option>
          <option value="ab">Alberta</option>
          <option value="sk">Saskatchewan</option>
          <option value="mb">Manitoba</option>
          <option value="on">Ontario</option>
          <option value="qb">Quebec</option>
          <option value="ns">Nova Scotia</option>
          <option value="pe">Prince Edward Island</option>
          <option value="nb">New Brunswick</option>
          <option value="nf">Newfoundland</option>
      </select><br/>

       <label for="phone-number">Phone Number</label>
      <input name="phoneNumber" type="text" id="phone-number" placeholder="xxxxxxxxxx"><br/>

      <label for="email">Email</label>
      <input name="email" type="text" id="email" placeholder="email@domain.com"><br/>

  <!-- Products for sale-->

      <label for="medical-tape">Medical Tape</label>
      <input name="medicalTape" type="text" id="medical-tape" placeholder="Enter quantity number"><br/>

      <label for="chalk">Chalk</label>
      <input name="chalk" type="text" id="chalk" placeholder="Enter quantity number"><br/>

      <label>Gymnastic suit</label>
      <select name="gymnasticSuit" id="gymnastic-suit">
          <option value="">----- Select -----</option>
          <option value="s">Small $2</option>
          <option value="m">Medium $3</option>
          <option value="l">Large $5</option>
      </select><br/>

      <label>Grips</label>
      <select name="gymnasticGrip" id="gymnastic-grip">
          <option value="">----- Select -----</option>
          <option value="s">Small $2</option>
          <option value="m">Medium $3</option>
          <option value="l">Large $5</option>
      </select><br/>


      <input type="submit" value="Submit">

      <!--where the error data will show up-->

      <p id="errors"></p>      
    
    </form>
  </div>
  <div class="formData">
    <% 
       if (typeof(errors) != 'undefined')
       {
         for(let error of errors)
         {
           %>
           <p class='errors'><%= error.msg %></p>
           <%
         }
       }      
    %> 
    <% 
      if(typeof(name) != 'undefined')
      {
        %>
        <p id="form-results"><%= `${name}'s Receipt` %></p>
        <table>
          <tr>
            <th> Name: </th>
            <td><%= name %></td>
          </tr>
          <tr>
            <th> Address: </th>
            <td><%= address %></td>
          </tr>
          <tr>
            <th> City: </th>
            <td><%= city %></td>
          </tr>
          <tr>
            <th> Province: </th>
            <td><%= province %></td>
          </tr>
          <tr>
            <th> Phone Number: </th>
            <td><%= phoneNumber %></td>
          </tr>
          <tr>
            <th> Email: </th>
            <td><%= email %></td>
          </tr>    
          <tr>
            <th> City: </th>
            <td><%= city %></td>
          </tr>
          <tr>
            <th> Province: </th>
            <td><%= province %></td>
          </tr>
          <tr>
            <th> Phone Number: </th>
            <td><%= phoneNumber %></td>
          </tr>
          <tr>
            <th> Email: </th>
            <td><%= email %></td>
          </tr>
          <tr>
            <th> Medical Tape: </th>
            <td><%= medicalTape %></td>
          </tr>
          <tr>
            <th> Chalk: </th>
            <td><%= chalk %></td>
          </tr>
          <tr>
            <th> Gymnastic Suit: </th>
            <td><%= gymnasticSuit %></td>
          </tr>
          <tr>
            <th> Grips: </th>
            <td><%= gymnasticGrip %></td>
          </tr>
          <tr>
            <th> Sub Total: </th>
            <td>$<%= email %></td>
          </tr>
                                 
        </table>
    <%
      }
    %>  
  </div>


    
  



    </div>

    <div class="clear"></div>



</body>